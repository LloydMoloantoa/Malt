<div class="col-6">
  <div class="form-floating mb-3">
  </div>
</div>

{{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
  {{alert}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div style="padding:20px;">
  
<form class="row g-3 needs-validation" method="POST" enctype="multipart/form-data" action="/register" novalidate>
  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" value="{{this.name}}" placeholder="Name" name="name">
      <label for="floatingInput">Name</label>
    </div>
  </div>

  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="email" class="form-control" id="floatingInput" value="{{this.email}}" placeholder="Email"
        name="email">
      <label for="floatingInput">Email</label>
    </div>
  </div>

  <div class="col-12">
    <div class="form-floating mb-3">
      <textarea class="form-control" placeholder="Address" id="address" name="address"
        style="height: 200px">{{this.address}}</textarea>
      <label for="address">Address</label>
    </div>
  </div>

  <div class="col-6">
    <label for="floatingInput">Gender</label>
    <select class="form-floating mb-3" name="gender" id="gender">
      <option value="male">Male</option>
      <option value="female">Female</option>
    </select>
  </div>

  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="date" class="form-control" id="floatingInput" value="{{this.dob}}" placeholder="" name="dob">
      <label for="floatingInput">Date of birth</label>
    </div>
  </div>

  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="date" class="form-control" id="floatingInput" value="{{this.doj}}" placeholder="" name="doj">
      <label for="floatingInput">Date of joining</label>
    </div>
  </div>

  <div class="col-6">
    <div class="form-floating mb-3">
    </div>
  </div>

  <div class="col-12">
    <div class="form-floating mb-3">
      <textarea class="form-control" placeholder="Description" id="description" name="description"
        style="height: 200px">{{this.description}}</textarea>
      <label for="description">Description</label>
    </div>
  </div>


  <div class="col-6">
    <label for="floatingInput">Role</label>
    <select class="form-floating mb-3" name="role" id="role">
      <option value="user">User</option>
      <option value="admin">Admin</option>
    </select>
  </div>



  <div class="col-12">
    <div class="form-floating mb-3">
      <h3>Upload Photo</h3>
      <input type="file" name="picture" accept="" enctype="multipart/form-data" />
      {{!-- <textarea class="form-control" placeholder="Leave a comment here" id="picture" name="picture"
        style="height: 200px">{{this.picture}}</textarea> --}}
    </div>
  </div>

  <div class="col-12 d-grid">
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>
</form>

</div>
